---
import company from '../data/company.json';
---
<section id="contacto" class="bg-slate-50">
  <div class="mx-auto max-w-7xl px-4 py-16">
    <h2 class="text-3xl font-bold mb-6">Contacto</h2>
    <div class="grid md:grid-cols-3 gap-6">
      <div class="rounded-2xl border border-light p-6">
        <h3 class="font-semibold mb-2">{company.brand.name}</h3>
        <p class="text-slate-700">{company.brand.tagline}</p>
        <p class="mt-3 text-slate-700"><strong>RUT:</strong> {company.taxId}</p>
        <p class="text-slate-700"><strong>Direcci√≥n:</strong> {company.address}</p>
      </div>
      {company.contacts.map((contact) => (
        <div class="rounded-2xl border border-light p-6">
          <h3 class="font-semibold">{contact.name}</h3>
          <p class="text-slate-700">{contact.role}</p>
          <p class="mt-2">
            <a class="text-primary underline" href={`tel:${contact.phone}`}>{contact.phone}</a>
          </p>
          <p>
            <a class="text-primary underline" href={`mailto:${contact.email}`}>{contact.email}</a>
          </p>
        </div>
      ))}
    </div>
  </div>
</section>