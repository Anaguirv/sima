---
import company from '../data/company.json';
---
<section id="contacto" class="bg-slate-100">
  <div class="mx-auto max-w-7xl px-4 py-16">
    <h2 class="text-3xl font-bold text-brand mb-6">Contacto</h2>
    <div class="grid md:grid-cols-3 gap-6">
      <div class="rounded-2xl bg-white p-6 shadow border border-slate-300">
        <h3 class="font-semibold">{company.brand.name}</h3>
        <p class="text-ink/80">{company.brand.tagline}</p>
        <p class="mt-3 text-ink/80"><strong>RUT:</strong> {company.taxId}</p>
        <p class="text-ink/80"><strong>Direcci√≥n:</strong> {company.address}</p>
      </div>

      {company.contacts.map((contact) => (
        <div class="rounded-2xl bg-white p-6 shadow border border-slate-300">
          <h3 class="font-semibold">{contact.name}</h3>
          <p class="text-ink/80">{contact.role}</p>
          <p class="mt-2"><a class="text-brand underline" href={`tel:${contact.phone}`}>{contact.phone}</a></p>
          <p><a class="text-brand underline" href={`mailto:${contact.email}`}>{contact.email}</a></p>
        </div>
      ))}
    </div>
  </div>
</section>
