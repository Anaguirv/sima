---
type Props = {
  title?: string;
  subtitle?: string;
  ctaHref?: string;
  categories?: string[];
};

const {
  title = 'Asesor√≠a integral para una miner√≠a m√°s eficiente, segura y rentable',
  subtitle = 'Soluciones completas para el desarrollo, ejecuci√≥n y cierre de operaciones mineras e industriales, integrando servicios t√©cnicos y estrat√©gicos con foco en eficiencia, cumplimiento normativo y valor agregado.',
  ctaHref = '#servicios',
  categories = [],
} = Astro.props as Props;

const heroImages = [
  "/images/hero/1.webp",
  "/images/hero/2.webp",
  "/images/hero/3.webp",
  "/images/hero/4.webp",
  "/images/hero/5.webp",
];
---

<section
  data-hero
  class="relative min-h-[92svh] md:min-h-screen grid place-items-center overflow-hidden"
>
  <!-- Carrusel de fondo -->
  <div class="absolute inset-0">
    {heroImages.map((img, i) => (
      <img
        src={img}
        alt={`Fondo ${i + 1}`}
        class="hero-bg absolute inset-0 w-full h-full object-cover opacity-0"
        style={`animation-delay: ${i * 8}s`}
        loading="lazy"
      />
    ))}
  </div>

  <!-- Overlays -->
  <div class="absolute inset-0 hero-overlay"></div>
  <div class="absolute inset-0 pointer-events-none bg-[radial-gradient(120%_70%_at_50%_30%,transparent,rgba(0,0,0,.25))]"></div>

  <!-- Contenido -->
  <div class="relative z-10 mx-auto w-full max-w-5xl px-4 text-center">
    <h1 class="hero-title hero-shadow text-white font-extrabold leading-tight text-4xl sm:text-5xl lg:text-[56px] lg:leading-[1.1]">
      {title}
    </h1>
    <p class="mt-5 text-white/90 text-base sm:text-lg lg:text-xl max-w-4xl mx-auto">
      {subtitle}
    </p>
    <div class="mt-8 flex justify-center">
      <a href={ctaHref} data-astro-prefetch class="btn-primary px-7 py-3">VER SERVICIOS</a>
    </div>
  </div>

  <!-- Barra categor√≠as -->
  {categories.length > 0 && (
    <div class="absolute bottom-0 left-0 right-0 z-10 bg-[rgba(20,28,36,.7)] backdrop-blur-sm border-t border-white/10 p-4">
      <div class="mx-auto max-w-6xl px-0">
        <div
          style={`--cols:${categories.length};`}
          class="categories-container grid grid-cols-1 divide-y divide-white/10 text-white/90 text-sm
                md:[grid-template-columns:repeat(var(--cols),minmax(0,1fr))] md:divide-y-0 md:divide-x"
        >
          {categories.map((c: string, index) => (
            <a
              href="#servicios"
              class="category-item flex items-center justify-center h-12 px-3 text-center font-semibold hover:text-white transition-colors
                    md:h-16"
              data-index={index}
            >
              <span class="leading-tight">{c}</span>
            </a>
          ))}
        </div>
      </div>
    </div>
  )}


<style is:global>
  /* üîÅ Transici√≥n m√°s suave con solapamiento entre im√°genes */
  @keyframes heroFade {
    0% { opacity: 0; }
    5%, 25% { opacity: 1; }
    30%, 100% { opacity: 0; }
  }

  .hero-bg {
    animation: heroFade 32s infinite;
    transition: opacity 2s ease-in-out;
  }

  /* Estilos para el carrusel de categor√≠as */
  .categories-container {
    position: relative;
    overflow: hidden;
  }

  .category-item {
    display: none;
  }

  .category-item.active {
    display: flex;
  }

  @media (min-width: 768px) {
    .category-item {
      display: flex;
    }
  }
</style>

<!-- Script carrusel categor√≠as -->
<script>
  if (typeof window !== "undefined") {
    const categories = document.querySelectorAll(".category-item");
    let currentIndex = 0;

    function showCategory(index: number) {
      categories.forEach((item, i) => {
        item.classList.toggle("active", i === index);
      });
    }

    function startCarousel() {
      setInterval(() => {
        currentIndex = (currentIndex + 1) % categories.length;
        showCategory(currentIndex);
      }, 3000); // Cambia cada 3 segundos
    }

    if (categories.length > 0) {
      showCategory(currentIndex);
      startCarousel();
    }
  }
</script>
