---
type Props = {
  title?: string;
  subtitle?: string;
  ctaHref?: string;
  categories?: string[];
};

const {
  title = 'Asesoría integral para una minería más eficiente, segura y rentable',
  subtitle = 'Soluciones completas para el desarrollo, ejecución y cierre de operaciones mineras e industriales, integrando servicios técnicos y estratégicos con foco en eficiencia, cumplimiento normativo y valor agregado.',
  ctaHref = '#servicios',
  categories = [],
} = Astro.props as Props;
---

<section
  data-hero
  class="relative min-h-[92svh] md:min-h-screen grid place-items-center bg-cover bg-center"
  style="background-image:url('/images/hero.jpg')"
>
  <!-- overlays -->
  <div class="absolute inset-0 hero-overlay"></div>
  <div class="absolute inset-0 pointer-events-none bg-[radial-gradient(120%_70%_at_50%_30%,transparent,rgba(0,0,0,.25))]"></div>

  <!-- contenido -->
  <div class="relative z-10 mx-auto w-full max-w-5xl px-4 text-center">
    <h1 class="hero-title hero-shadow text-white font-extrabold leading-tight text-4xl sm:text-5xl lg:text-[56px] lg:leading-[1.1]">{title}</h1>
    <p class="mt-5 text-white/90 text-base sm:text-lg lg:text-xl max-w-4xl mx-auto">{subtitle}</p>
    <div class="mt-8 flex justify-center">
      <a href={ctaHref} data-astro-prefetch class="btn-primary px-7 py-3">VER SERVICIOS</a>
    </div>
  </div>

  <!-- barra categorías -->
  {categories.length > 0 && (
    <div class="absolute bottom-0 left-0 right-0 z-10 bg-[rgba(20,28,36,.7)] backdrop-blur-sm border-t border-white/10 p-4">
      <div class="mx-auto max-w-7xl px-0">
        <div
          class="grid divide-x divide-white/10 text-white/90 text-sm"
          style={`grid-template-columns: repeat(${categories.length}, minmax(0,1fr));`}
        >
          {categories.map((c: string) => (
            <a
              href="#servicios"
              class="flex items-center justify-center h-16 px-3 text-center font-semibold hover:text-white transition-colors"
            >
              <span class="leading-tight">{c}</span>
            </a>
          ))}
        </div>
      </div>
    </div>
  )}
</section>
