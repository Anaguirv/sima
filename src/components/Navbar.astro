---
import company from '../data/company.json';
---
<header class="sticky top-0 z-50 bg-white/90 backdrop-blur border-b border-light">
  <nav class="mx-auto max-w-7xl px-4 py-3 flex items-center justify-between">
    <a href="/" class="font-semibold text-primary">{company.brand.name}</a>
    <div class="hidden md:flex items-center gap-6">
      <a href="#servicios" class="hover:text-primary">Servicios</a>
      <a href="#sobre" class="hover:text-primary">Sobre nosotros</a>
      <a href="#contacto" class="hover:text-primary">Contacto</a>
      <a href={`https://wa.me/${company.whatsapp.replace('+', '')}`} class="rounded-2xl bg-primary text-white px-4 py-2">WhatsApp</a>
    </div>
  </nav>
</header>