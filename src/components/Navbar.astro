---
import DesktopNav from "@/components/DesktopNav";
import MobileNav from "@/components/MobileNav";
import company from "@/data/company.json";
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/90 dark:bg-[color-mix(in_srgb,black_40%,transparent)] backdrop-blur border-b border-slate-300">
  <div class="mx-auto max-w-7xl px-4 py-3 flex items-center">
    <!-- Logo -->
    <a href="/" class="shrink-0 inline-flex items-center gap-3" aria-label="Inicio SIMA Ingeniería">
      <img
        src="/images/logo.png"
        alt="SIMA Ingeniería"
        class="h-14 sm:h-16 md:h-20 lg:h-24 w-auto drop-shadow-[0_2px_6px_rgba(8,62,82,0.25)]"
      />
      <span class="sr-only">SIMA Ingeniería</span>
    </a>

    <!-- Desktop (isla React) -->
    <DesktopNav whatsapp={company.whatsapp} client:load />

    <!-- Mobile (isla React) -->
    <MobileNav whatsapp={company.whatsapp} client:load />
  </div>
</header>
