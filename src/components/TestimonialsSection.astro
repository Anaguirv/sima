---
const testimonials = [
  { quote: 'Alinearon la operación con la normativa y mejoraron indicadores clave.', author: 'Gerente de Operaciones' },
  { quote: 'Rápida respuesta en faena y calidad técnica sobresaliente.', author: 'Superintendente de Medio Ambiente' },
  { quote: 'Excelente relación calidad/precio con foco en continuidad operacional.', author: 'Jefe de Planta' },
];
---
<section class="relative">
  <div class="bg-gradient-to-b from-[rgba(8,62,82,.95)] to-[rgba(11,122,163,.9)]">
    <div class="mx-auto max-w-7xl px-4 py-16 text-white">
      <h2 class="text-3xl md:text-4xl font-bold text-center">Lo que dicen de nosotros</h2>
      <div class="mt-8 grid gap-6 md:grid-cols-3">
        {testimonials.map((t) => (
          <figure class="rounded-2xl bg-white/10 border border-white/10 p-6 backdrop-blur">
            <blockquote class="text-white/90">“{t.quote}”</blockquote>
            <figcaption class="mt-3 text-white/70 font-medium">— {t.author}</figcaption>
          </figure>
        ))}
      </div>
    </div>
  </div>
</section>
