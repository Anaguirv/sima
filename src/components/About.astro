---
import company from '../data/company.json';
---
<section id="sobre" class="bg-slate-100">
  <div class="mx-auto max-w-7xl px-4 py-16 grid md:grid-cols-2 gap-10">
    <div class="relative">
      <span class="absolute left-0 top-0 h-full w-1 bg-brand-700 rounded-full"></span>
      <h2 class="text-3xl font-bold mb-4 pl-4">Sobre nosotros</h2>
      <p class="text-ink/90 mb-4 pl-4"><strong>Misión:</strong> {company.mission}</p>
      <p class="text-ink/90 mb-4 pl-4"><strong>Visión:</strong> {company.vision}</p>
    </div>
    <div class="rounded-2xl bg-white p-6 shadow border border-slate-300">
      <h3 class="font-semibold mb-2 text-brand">Valores</h3>
      <ul class="flex flex-wrap gap-2">
        {company.values.map((value: string) => <li class="chip chip-brand">{value}</li>)}
      </ul>
    </div>
  </div>
</section>
