---
import company from "@/data/company.json";
const phone = company.whatsapp.replace("+", "");
---
<a
  href={`https://wa.me/${phone}`}
  target="_blank"
  rel="noopener noreferrer"
  aria-label="WhatsApp SIMA Ingeniería"
  class="fixed right-5 bottom-5 z-50 flex items-center gap-2 rounded-full px-4 py-2.5 bg-[#25D366] text-white font-semibold shadow-lg hover:shadow-xl hover:brightness-105 transition-all duration-300"
>
  <img src="/whatsapp.svg" alt="WhatsApp" class="w-6 h-6" />
  <span class="text-sm leading-none">Escríbenos</span>
</a>
