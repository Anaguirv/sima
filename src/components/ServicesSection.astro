---
import CATS from "@/data/services-categories.json";
---

<section id="servicios" class="bg-white">
  <div class="mx-auto max-w-7xl px-4 py-16">
    <header class="flex items-end justify-between gap-4">
      <div>
        <p class="uppercase text-sm tracking-wide text-brand font-semibold">Nuestros servicios</p>
        <h2 class="mt-2 text-3xl md:text-4xl font-bold text-[rgb(8,62,82)]">
          Nos especializamos en
        </h2>
        <p class="mt-3 text-slate-600 max-w-3xl">
          Soluciones integrales en <strong>ingeniería, medio ambiente y operación</strong>.
          Selecciona una categoría para explorar los servicios asociados.
        </p>
      </div>
      <a href="/services" class="inline-flex items-center gap-2 text-brand font-semibold hover:underline">
        Ver todos
        <span aria-hidden>→</span>
      </a>
    </header>

    <!-- Grid de categorías -->
    <div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {CATS.categories.map((cat) => (
        <a
          href={`/services?cat=${encodeURIComponent(cat.name)}`}
          class="group block rounded-2xl border border-slate-200 bg-white shadow-sm hover:shadow-md transition overflow-hidden"
        >
          <div class="p-6">
            <h3 class="text-lg font-semibold text-[rgb(8,62,82)] group-hover:text-[rgb(11,122,163)]">
              {cat.name}
            </h3>
            <ul class="mt-3 text-slate-600 text-sm space-y-1">
              {cat.items.slice(0, 3).map((item) => (
                <li>• {item}</li>
              ))}
            </ul>
            <p class="mt-3 text-[rgb(11,122,163)] text-sm font-medium">
              Ver servicios →
            </p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
