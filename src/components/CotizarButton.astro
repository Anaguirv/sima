const scrollToContact = () => {
  if (typeof window !== "undefined") {
    const section = document.querySelector("#contacto") || document.querySelector("#contact");
    if (section) {
      section.scrollIntoView({ behavior: "smooth" });
    } else {
      window.location.href = "/#contacto";
    }
  }
};
