---
/** Bloque introductorio “Sobre SIMA Ingeniería” versión ejecutiva-minera */
---
<section class="relative overflow-hidden bg-gradient-to-br from-[rgb(245,249,251)] via-[rgb(240,247,250)] to-white">
  <div class="absolute inset-0 pointer-events-none opacity-10" style="background-image: radial-gradient(circle at 1px 1px, rgba(8,62,82,0.2) 1px, transparent 0); background-size: 28px 28px;"></div>

  <div class="relative z-10 mx-auto max-w-7xl px-6 py-20 grid md:grid-cols-2 gap-12 items-center">
    <!-- Texto institucional -->
    <div class="order-2 md:order-1">
      <p class="text-sm uppercase tracking-wider text-[rgb(11,122,163)] font-semibold">SIMA Ingeniería</p>
      <h2 class="mt-3 text-3xl md:text-4xl font-bold text-[rgb(8,62,82)] leading-tight">
        Ingeniería aplicada a la <span class="text-[rgb(11,122,163)]">Sostenibilidad y productividad Minera</span>
      </h2>
      <p class="mt-4 text-[rgb(51,54,58)]/90 text-base max-w-xl">
        Acompañamos a empresas mineras e industriales en el cumplimiento normativo, la eficiencia operacional y la gestión ambiental integral. 
        Combinamos ingeniería, terreno y estrategia para elevar los estándares técnicos de cada operación.
      </p>

      <ul class="mt-6 grid gap-3 text-[rgb(51,54,58)]/90">
        <li class="flex items-start gap-2">
          <span class="text-[rgb(11,122,163)] mt-1">▸</span>
          Gestión Ambiental y Permisos Sectoriales.
        </li>
        <li class="flex items-start gap-2">
          <span class="text-[rgb(11,122,163)] mt-1">▸</span>
          Seguridad, Salud Ocupacional e Higiene Industrial.
        </li>
        <li class="flex items-start gap-2">
          <span class="text-[rgb(11,122,163)] mt-1">▸</span>
          Ingeniería, Operación y Mantenimiento en Faenas.
        </li>
      </ul>

      <div class="mt-8 flex flex-wrap gap-4">
        <a href="/services" class="inline-flex items-center gap-2 rounded-xl bg-[rgb(11,122,163)] text-white font-semibold px-6 py-3 shadow hover:bg-[rgb(8,62,82)] transition">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="M12 5l7 7-7 7"/></svg>
          Ver servicios
        </a>
        <a href="#contacto" class="inline-flex items-center gap-2 rounded-xl border border-[rgb(11,122,163)] text-[rgb(11,122,163)] font-semibold px-6 py-3 hover:bg-[rgb(11,122,163)] hover:text-white transition">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="17 8 12 3 7 8"/><line x1="12" y1="3" x2="12" y2="15"/></svg>
          Contáctanos
        </a>
      </div>
    </div>

    <!-- Imagen -->
     <!-- Carrusel de imágenes corporativas -->
<div class="order-1 md:order-2 relative rounded-2xl overflow-hidden shadow-2xl border border-[rgba(11,122,163,0.15)]">
  <div id="sima-carousel" class="relative h-[420px] md:h-[460px] w-full overflow-hidden rounded-2xl">
    <!-- Slides -->
    <div class="carousel-track flex w-full h-full transition-transform duration-700 ease-in-out">
      <img
        src="/images/intro/1.webp"
        alt="Equipo técnico en faena minera"
        class="w-full h-full object-cover object-center flex-shrink-0"
        loading="lazy"
      />
      <img
        src="/images/intro/2.webp"
        alt="Monitoreo ambiental en terreno"
        class="w-full h-full object-cover object-center flex-shrink-0"
        loading="lazy"
      />
      <img
        src="/images/intro/3.webp"
        alt="Operación de planta PTAS"
        class="w-full h-full object-cover object-center flex-shrink-0"
        loading="lazy"
      />
      <img
        src="/images/intro/4.webp"
        alt="Operación de sistemas industriales"
        class="w-full h-full object-cover object-center flex-shrink-0"
        loading="lazy"
      />
    </div>

    <!-- Overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-[rgba(8,62,82,0.25)] to-transparent pointer-events-none"></div>

    <!-- Caption corporativa -->
    <div
      class="absolute bottom-4 right-4 bg-white/95 text-[rgb(8,62,82)] text-sm px-4 py-2 rounded-lg border border-[rgba(8,62,82,0.15)] shadow-md backdrop-blur-sm"
    >
      <span class="font-semibold">Presencia en terreno</span> — Faenas Norte y Centro
    </div>

    <!-- Controles -->
    <button
      id="prev-slide"
      class="absolute left-3 top-1/2 -translate-y-1/2 bg-white/70 hover:bg-white text-[rgb(8,62,82)] p-2 rounded-full shadow-md transition backdrop-blur-sm"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    </button>

    <button
      id="next-slide"
      class="absolute right-3 top-1/2 -translate-y-1/2 bg-white/70 hover:bg-white text-[rgb(8,62,82)] p-2 rounded-full shadow-md transition backdrop-blur-sm"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </button>

    <!-- Indicadores -->
    <div class="absolute bottom-3 left-1/2 -translate-x-1/2 flex gap-2">
      <span class="dot w-2.5 h-2.5 rounded-full bg-white/60 hover:bg-white transition"></span>
      <span class="dot w-2.5 h-2.5 rounded-full bg-white/60 hover:bg-white transition"></span>
      <span class="dot w-2.5 h-2.5 rounded-full bg-white/60 hover:bg-white transition"></span>
      <span class="dot w-2.5 h-2.5 rounded-full bg-white/60 hover:bg-white transition"></span>
    </div>
  </div>
</div>

<!-- Script carrusel -->
<script is:inline>
  const track = document.querySelector('#sima-carousel .carousel-track');
  const slides = track.querySelectorAll('img');
  const dots = document.querySelectorAll('#sima-carousel .dot');
  const prev = document.getElementById('prev-slide');
  const next = document.getElementById('next-slide');

  let index = 0;

  function updateCarousel() {
    track.style.transform = `translateX(-${index * 100}%)`;
    dots.forEach((d, i) => d.classList.toggle('bg-white', i === index));
  }

  next.addEventListener('click', () => {
    index = (index + 1) % slides.length;
    updateCarousel();
  });

  prev.addEventListener('click', () => {
    index = (index - 1 + slides.length) % slides.length;
    updateCarousel();
  });

  // autoplay cada 6s
  setInterval(() => {
    index = (index + 1) % slides.length;
    updateCarousel();
  }, 6000);

  updateCarousel();
</script>
