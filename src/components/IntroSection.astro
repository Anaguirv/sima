</div>

<!-- Script carrusel -->
<script is:inline>
  const track = document.querySelector('#sima-carousel .carousel-track');
  const slides = track.querySelectorAll('.slide-img');
  const dots = document.querySelectorAll('#sima-carousel .dot');
  const prev = document.getElementById('prev-slide');
  const next = document.getElementById('next-slide');

  let index = 0;
  let interval;

  function updateCarousel() {
    track.style.transform = `translateX(-${index * 100}%)`;
    dots.forEach((d, i) => d.classList.toggle('bg-[rgb(11,122,163)]', i === index));
    slides.forEach((s, i) => {
      s.classList.toggle('animate-kenburns', i === index);
    });
  }

  function nextSlide() {
    index = (index + 1) % slides.length;
    updateCarousel();
  }

  function prevSlideHandler() {
    index = (index - 1 + slides.length) % slides.length;
    updateCarousel();
  }

  next.addEventListener('click', () => { nextSlide(); restartAuto(); });
  prev.addEventListener('click', () => { prevSlideHandler(); restartAuto(); });

  dots.forEach((dot, i) => dot.addEventListener('click', () => {
    index = i;
    updateCarousel();
    restartAuto();
  }));

  function startAuto() {
    interval = setInterval(nextSlide, 6500);
  }
  function restartAuto() {
    clearInterval(interval);
    startAuto();
  }

  startAuto();
  updateCarousel();
</script>

<style is:global>
  /* üé• Efecto Ken Burns (zoom lento) */
  @keyframes kenburns {
    0% { transform: scale(1.05); }
    100% { transform: scale(1.15); }
  }
  .animate-kenburns {
    animation: kenburns 8s ease-in-out forwards;
  }

  /* Sombra y borde elegante */
  .dot.bg-\[rgb\(11,122,163\)\] {
    box-shadow: 0 0 6px rgba(11,122,163,0.6);
  }
</style>
